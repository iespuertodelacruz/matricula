@page
    size: a4
    margin-left: 1cm
    margin-right: 1cm
    margin-top: 2cm
    @top-center
        content: element(header)

@page :first
    margin-top: 5cm
    @top-center
        content: element(header_cover)

#header
    position: running(header)

#header-cover
    position: running(header_cover)

@font-face
    src: url("../fonts/NewsCycle-Regular.ttf")
    font-family: NewsCycle
    font-weight: normal

@font-face
    src: url("../fonts/NewsCycle-Bold.ttf")
    font-family: NewsCycle
    font-weight: bold

@font-face
    src: url("../fonts/BebasNeue.otf")
    font-family: BebasNeue

html
    font-family: NewsCycle

h1, h2, h3, h4, h5, h6
    font-family: BebasNeue
    margin: 0
    padding-top: 2mm
    padding-bottom: 2mm

.value
    padding: 0
    padding-left: 1mm
    padding-right: 1mm
    border: 1px solid black
    font-weight: bold

.field
    margin-right: 7mm

#header
    #logo-school
        position: absolute
        top: -5mm
        left: 0
        width: 30mm

    #logo-consejeria
        position: absolute
        top: -6mm
        right: 0
        width: 40mm

#header-cover
    #logo-school
        position: absolute
        top: 3mm
        left: 0
        width: 40mm

    #logo-consejeria
        position: absolute
        top: -17mm
        left: 0
        width: 50mm

    #profile-pic
        width: 33mm
        height: 43mm
        border: 1px solid black
        position: absolute
        top: -20mm
        right: 0
        text-align: center
        line-height: 43mm

    #order-id
        position: absolute
        width: 40mm
