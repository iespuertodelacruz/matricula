// out: custom.css

@page
    size: a4
    margin-left: 1cm
    margin-right: 1cm
    margin-top: 2cm
    margin-bottom: 5mm
    @top-center
        content: element(header)

@page :first
    margin-top: 5cm
    @top-center
        content: element(header_cover)

#header
    position: running(header)

#header-cover
    position: running(header_cover)

@font-face
    src: url("../fonts/NewsCycle-Regular.ttf")
    font-family: NewsCycle
    font-weight: normal

@font-face
    src: url("../fonts/NewsCycle-Bold.ttf")
    font-family: NewsCycle
    font-weight: bold

@font-face
    src: url("../fonts/BebasNeue.otf")
    font-family: BebasNeue

html
    font-family: NewsCycle

h1, h2, h3, h4, h5, h6
    font-family: BebasNeue
    margin: 0
    padding-top: 2mm
    padding-bottom: 2mm

.value
    padding: 0
    padding-left: 1mm
    padding-right: 1mm
    border: 1px solid black
    font-weight: bold

.field
    margin-right: 7mm

#header
    #logo-school
        position: absolute
        top: -5mm
        left: 0
        width: 30mm
    #logo-consejeria
        position: absolute
        top: -6mm
        right: 0
        width: 40mm
    .copy
        position: absolute
        color: rgb(89, 89, 89)
        line-height: 90%
        left: 70mm
        top: 0mm

#header-cover
    #logo-school
        position: absolute
        top: 3mm
        left: 0
        width: 40mm
    #logo-consejeria
        position: absolute
        top: -17mm
        left: 0
        width: 50mm
    #profile-pic
        width: 33mm
        height: 43mm
        border: 1px solid black
        position: absolute
        top: -20mm
        right: 0
        text-align: center
        line-height: 43mm
    #order-id
        position: absolute
        width: 40mm
        height: 20mm
        left: 55mm
        top: -20mm
        text-align: center
        border: 1px solid black
        line-height: 20mm
    #register
        position: absolute
        top: -22mm
        left: 98mm
        line-height: 6mm
    #title
        position: absolute
        top: 6mm
        left: 55mm
        font-family: BebasNeue
        font-size: 20pt
        line-height: 7mm
        .edulevel
            font-size: 27pt
    #subtitle
        width: 10cm
        position: absolute
        top: 14mm
        left: 55mm
        font-size: 16pt
        line-height: 5mm
        color: gray
        font-family: BebasNeue
    #school-year
        position: absolute
        top: -20mm
        left: 14mm
        font-family: BebasNeue
        font-size: 16pt
    #record
        .digit
            height: 6mm
            width: 6mm
            display: inline-block
            border: 1px solid black
            margin: 0
            padding: 0
    .copy
        position: absolute
        color: rgb(89, 89, 89)
        line-height: 90%
        right: 10mm
        top: 25mm

.section
    margin-top: 3mm
    page-break-inside: avoid
    .title
        font-family: BebasNeue
        font-size: 16pt
        border-bottom: 1px solid black
        margin-bottom: 3mm
    table
        width: 100%
        border-spacing: 2mm
        border-collapse: separate
        td.subtitle
            font-family: BebasNeue
            font-size: 13pt
            padding-top: 2mm
            padding-bottom: 1mm
    .label
        width: 1%
        white-space: nowrap
    .u10
        width: 10mm
    .u20
        width: 20mm
    .u30
        width: 30mm
    .u40
        width: 40mm
    .u50
        width: 50mm
    .u60
        width: 60mm
    .u70
        width: 70mm
    .u80
        width: 80mm
    .u90
        width: 90mm

.page-break
    page-break-after: always

#signature
    .content
        text-align: center
        font-size: 11pt
        .space
            height: 10mm
        .conditions
            font-size: 9pt
            margin-top: 3mm
