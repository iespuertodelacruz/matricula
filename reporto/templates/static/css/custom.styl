        font-family: BebasNeue
        font-size: 16pt
        

.section
    .title
        font-family: BebasNeue
        font-size: 16pt
        border-bottom: 1px solid black
        margin-bottom: 3mm
    table
        width: 100%
        border-spacing: 2mm
        border-collapse: separate
        td.subtitle
            font-family: BebasNeue
            font-size: 13pt
            padding-top: 2mm
            padding-bottom: 1mm

    .label
        width: 1%
        white-space: nowrap
    
    .u10
        width: 10mm
    .u20
        width: 20mm
